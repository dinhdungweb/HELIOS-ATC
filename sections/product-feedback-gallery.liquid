{% comment %}
  Product Feedback Gallery Section
  Displays customer feedback images from product metafields
{% endcomment %}

{% if product.metafields.custom.feedback.value and product.metafields.custom.feedback.value.size > 0 %}
  <div class="product-feedback-gallery section-{{ section.id }}-padding">
    <div class="page-width">
      {% if section.settings.heading != blank %}
        <div class="feedback-header">
          <h2 class="feedback-title h1">{{ section.settings.heading }}</h2>
          {% if section.settings.description != blank %}
            <div class="feedback-description rte">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="feedback-gallery-grid">
        {% for image in product.metafields.custom.feedback.value %}
          <div class="feedback-item" data-index="{{ forloop.index }}">
            <div class="feedback-image-wrapper">
              <img 
                src="{{ image | image_url: width: 800 }}" 
                alt="{{ section.settings.heading | default: 'Feedback từ khách hàng' }} {{ forloop.index }}"
                loading="lazy"
                width="400"
                height="400"
                class="feedback-image"
                onclick="openFeedbackModal(this)"
              >
              {% if section.settings.show_overlay %}
                <div class="feedback-overlay">
                  <span class="feedback-zoom-icon">
                    {% render 'svg-gallery' %}
                  </span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Modal for image preview -->
  <div id="feedback-modal" class="feedback-modal" onclick="closeFeedbackModal()">
    <div class="feedback-modal-content">
      <span class="feedback-close" onclick="closeFeedbackModal()">&times;</span>
      <img id="feedback-modal-image" src="" alt="">
      <div class="feedback-modal-nav">
        <button class="feedback-nav-btn feedback-prev" onclick="changeFeedbackImage(-1)">&#10094;</button>
        <button class="feedback-nav-btn feedback-next" onclick="changeFeedbackImage(1)">&#10095;</button>
      </div>
    </div>
  </div>
{% endif %}

<style>
  .product-feedback-gallery {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
  }

  .feedback-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .feedback-title {
    margin-bottom: 16px;
    color: {{ section.settings.heading_color | default: '#000' }};
  }

  .feedback-description {
    max-width: 600px;
    margin: 0 auto;
    color: {{ section.settings.text_color | default: '#666' }};
  }

  .feedback-gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.image_size }}px, 1fr));
    gap: {{ section.settings.grid_gap }}px;
    margin-top: 32px;
  }

  .feedback-item {
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    background: #f8f8f8;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feedback-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .feedback-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* 1:1 Aspect Ratio */
    overflow: hidden;
  }

  .feedback-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .feedback-item:hover .feedback-image {
    transform: scale(1.05);
  }

  .feedback-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feedback-item:hover .feedback-overlay {
    opacity: 1;
  }

  .feedback-zoom-icon {
    color: white;
    font-size: 24px;
  }

  /* Modal Styles */
  .feedback-modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.9);
    animation: fadeIn 0.3s ease;
  }

  .feedback-modal-content {
    position: relative;
    margin: auto;
    padding: 20px;
    width: 90%;
    max-width: 800px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feedback-modal-content img {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 8px;
  }

  .feedback-close {
    position: absolute;
    top: 20px;
    right: 35px;
    color: #fff;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    z-index: 10000;
  }

  .feedback-close:hover {
    opacity: 0.7;
  }

  .feedback-modal-nav {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    transform: translateY(-50%);
  }

  .feedback-nav-btn {
    background: rgba(255,255,255,0.2);
    border: none;
    color: white;
    font-size: 24px;
    padding: 10px 15px;
    cursor: pointer;
    border-radius: 50%;
    transition: background 0.3s ease;
  }

  .feedback-nav-btn:hover {
    background: rgba(255,255,255,0.4);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .feedback-gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    
    .feedback-header {
      margin-bottom: 24px;
    }
    
    .feedback-title {
      font-size: 1.5rem;
    }
    
    .feedback-modal-content {
      padding: 10px;
    }
    
    .feedback-close {
      top: 10px;
      right: 20px;
      font-size: 30px;
    }
  }

  @media screen and (max-width: 480px) {
    .feedback-gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  let currentFeedbackIndex = 0;
  let feedbackImages = [];

  function openFeedbackModal(img) {
    const modal = document.getElementById('feedback-modal');
    const modalImg = document.getElementById('feedback-modal-image');
    
    // Get all feedback images
    feedbackImages = Array.from(document.querySelectorAll('.feedback-image'));
    currentFeedbackIndex = feedbackImages.indexOf(img);
    
    modal.style.display = 'block';
    modalImg.src = img.src.replace('width=800', 'width=1200');
    modalImg.alt = img.alt;
    
    // Prevent body scroll
    document.body.style.overflow = 'hidden';
  }

  function closeFeedbackModal() {
    const modal = document.getElementById('feedback-modal');
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  }

  function changeFeedbackImage(direction) {
    currentFeedbackIndex += direction;
    
    if (currentFeedbackIndex >= feedbackImages.length) {
      currentFeedbackIndex = 0;
    } else if (currentFeedbackIndex < 0) {
      currentFeedbackIndex = feedbackImages.length - 1;
    }
    
    const modalImg = document.getElementById('feedback-modal-image');
    const currentImg = feedbackImages[currentFeedbackIndex];
    modalImg.src = currentImg.src.replace('width=800', 'width=1200');
    modalImg.alt = currentImg.alt;
  }

  // Close modal with Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeFeedbackModal();
    } else if (event.key === 'ArrowLeft') {
      changeFeedbackImage(-1);
    } else if (event.key === 'ArrowRight') {
      changeFeedbackImage(1);
    }
  });
</script>

{% schema %}
{
  "name": "Product Feedback Gallery",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feedback từ khách hàng"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 200,
      "max": 400,
      "step": 20,
      "unit": "px",
      "label": "Image size",
      "default": 280
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Grid gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show hover overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Product Feedback Gallery"
    }
  ]
}
{% endschema %}